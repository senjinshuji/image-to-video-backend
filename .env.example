# Application
APP_NAME=image-to-video-backend
APP_ENV=development
DEBUG=True

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/image_to_video

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# API Keys
OPENAI_API_KEY=your_openai_api_key
KLING_ACCESS_KEY=your_kling_access_key
KLING_SECRET_KEY=your_kling_secret_key

# Google Sheets
GOOGLE_SHEETS_CREDENTIALS_JSON=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.vercel.app"]

# JWT Secret
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=20971520  # 20MB in bytes